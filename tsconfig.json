{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "outDir": "./dist",
    "lib": ["es2017"],
    "jsx": "preserve",
    "removeComments": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types", "typings", "@/typings"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": false
  },

  "compileOnSave": false,
  "includes": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
